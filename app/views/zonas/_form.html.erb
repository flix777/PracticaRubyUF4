<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @zona, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>

        <div class="form-group">
          <%= f.label :nom, class:"control-label" %>
          <%= f.text_field :nom, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :clima, class: "control-label" %>
          <%= f.text_field :clima, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :temperatura, class: "control-label" %>
          <%= f.text_field :temperatura, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :humitat, class: "control-label" %>
          <%= f.text_field :humitat, class: "form-control" %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
