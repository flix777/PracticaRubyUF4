<%= form_with(model: animal, local: true) do |form| %>
  <% if animal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(animal.errors.count, "error") %> prohibited this animal from being saved:</h2>

      <ul>
      <% animal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nom %>
    <%= form.text_field :nom, id: :animal_nom %>
  </div>

  <div class="field">
    <%= form.label :raza %>
    <%= form.text_field :raza, id: :animal_raza %>
  </div>

  <div class="field">
    <%= form.label :any_naixement %>
    <%= form.number_field :any_naixement, id: :animal_any_naixement %>
  </div>

  <div class="field">
  <%= form.label :cuidador_id %>
<%= form.select :cuidador_id, @cuidadors.collect { |cuidador| [cuidador.email, cuidador.id]} %>
</div>

  <div class="field">
  <%= form.label :zona_id %>
<%= form.select :zona_id, @zonas.collect { |zona| [zona.nom, zona.id]} %>
</div>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
