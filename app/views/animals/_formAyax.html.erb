<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @animal, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>

        <div class="form-group">
          <%= f.label :nom, class:"control-label" %>
          <%= f.text_field :nom, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :raza, class: "control-label" %>
          <%= f.text_field :raza, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :any_naixement, class: "control-label" %>
          <%= f.number_field :any_naixement, class: "form-control" %>
        </div>

        <div class="field">
        <%= f.label :zona_id %>
      <%= f.select :zona_id, @zonas.collect { |zona| [zona.nom, zona.id]} %>
      </div>

        <div class="form-group">
         <%= f.label :cuidador_id, class: "control-label" %>
         <%= f.select :cuidador_id, @cuidadors.collect { |cuidador| [cuidador.email, cuidador.id]}, class: "form-control" %>
        </div>



      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
